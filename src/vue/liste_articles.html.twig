{% extends "base.html.twig" %}

{% block title %}{{ parent() }} Liste articles{% endblock %}

{% block contenu %}

        {% for article in listeArticles %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{article.titre}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{article.auteur}}</h6>
                    <p class="card-text">{{article.contenu}}</p>
                    {% if article.idAuteur == session.id %}
                        <a href="#"><button type="button" class="btn btn-primary">Modifier (propri√©taire de l'article)</button></a>
                    {% endif %}
                    {% if session.role == 2 %}
                        <a href="#"><button type="button" class="btn btn-primary">Modifier (administrateur)</button></a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
{% endblock %}